@model IEnumerable<ERPSzakdolgozat.ViewModels.Employee_Index>

@{
	ViewData["Title"] = "Index";
}

<h2>Employees - List</h2>

<form asp-controller="Employees" asp-action="Index" method="get" class="form-inline pos-relative">
	<div class="col-md-12 margin-bottom-sm">
		<label class="control-label">
			<strong>Name / Company Id.</strong>
		</label>

		<div class="input-group col-sm-5">
			<input type="text" name="search" class="form-control" value="@(ViewData["search"])" />

			<span class="input-group-btn">
				<button type="submit" class="btn btn-default">
					<i class="glyphicon glyphicon-search"></i>
				</button>
			</span>
		</div>

		<div class="checkbox" style="margin-left:10px">
			<label>
				@Html.CheckBox("active", (bool)ViewData["active"], new { onchange = "$(this.form).submit()" }) Active
			</label>
		</div>

		<a asp-action="Create" class="btn btn-success pull-right">Create new</a>
	</div>
</form>

<table class="table table-striped">
	<thead class="bg-dark">
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.EmployeeName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Address)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Active)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.CompanyIdentifier)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.LeaderName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.TeamName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Mobile)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Email)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody class="bg-light">
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.EmployeeName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Address)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Active)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.CompanyIdentifier)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.LeaderName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.TeamName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Mobile)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Email)
				</td>

				<td>
					<div class="dropdown">
						<button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
							@*<i class="glyphicon glyphicon-option-horizontal"></i>*@
							Actions
						</button>
						<ul class="dropdown-menu dropdown-menu-right">
							<li><a asp-action="Edit" asp-route-id="@item.Id">Edit</a></li>
							<li><a asp-action="Details" asp-route-id="@item.Id">Details</a></li>
							<li class="divider"></li>
							<li><a asp-action="Delete" asp-route-id="@item.Id">Delete</a></li>
						</ul>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>
