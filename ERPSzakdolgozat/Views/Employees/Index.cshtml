@model IEnumerable<ERPSzakdolgozat.ViewModels.Employee_Index>

@{
	ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
	<a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Address)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Active)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.CompanyIdentifier)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.LeaderName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.TeamName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Mobile)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Email)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Address)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Active)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.CompanyIdentifier)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.LeaderName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.TeamName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Mobile)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Email)
				</td>

				<td>
					<div class="dropdown">
						<button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
							<i class="glyphicon glyphicon-option-horizontal"></i>
						</button>
						<ul class="dropdown-menu dropdown-menu-right">
							<li><a asp-action="Edit" asp-route-id="@item.Id">Edit</a></li>
							<li><a asp-action="Details" asp-route-id="@item.Id">Details</a></li>
							<li class="divider"></li>
							<li><a asp-action="Delete" asp-route-id="@item.Id">Delete</a></li>
						</ul>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>
