@model IEnumerable<ERPSzakdolgozat.Models.Client>

@{
	ViewData["Title"] = "Clients - List";
}

<h2>Clients</h2>

<div class="col-md-12 margin-bottom-sm">
	<a asp-action="Create" class="btn btn-success pull-right">Create New</a>
</div>

<table class="table table-hover">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.ClientId)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ClientName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Email)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Phone)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Mobile)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ContactName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Address)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Active)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.ClientId)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ClientName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Email)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Phone)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Mobile)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ContactName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Address)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Active)
				</td>

				<td class="text-right">
					<div class="dropdown">
						<button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
							Actions
						</button>
						<ul class="dropdown-menu dropdown-menu">
							<li><a asp-action="Edit" asp-route-id="@item.Id">Edit</a></li>
							<li><a asp-action="Details" asp-route-id="@item.Id">Details</a></li>
							<li class="divider"></li>
							<li><a asp-action="Delete" asp-route-id="@item.Id">Delete</a></li>
						</ul>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>
