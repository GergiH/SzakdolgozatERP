@model ERPSzakdolgozat.Models.Team

@{
	ViewData["Title"] = "Team - Delete";
}

<h2>Delete</h2>

<h4>Team</h4>
<h3>Are you sure you want to delete this?</h3>
<div>
	<h4>Team</h4>
	<hr />
	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayNameFor(model => model.TeamCode)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.TeamCode)
		</dd>
		<dt>
			@Html.DisplayNameFor(model => model.TeamName)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.TeamName)
		</dd>
		<dt>
			@Html.DisplayNameFor(model => model.Active)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.Active)
		</dd>
		<dt>
			@Html.DisplayNameFor(model => model.Unit)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.Unit.UnitName)
		</dd>
	</dl>

	<form asp-action="Delete">
		<input type="hidden" asp-for="Id" />
		<a asp-action="Index" class="btn btn-default">Back to List</a>

		@if ((int)ViewData["EmployeeCount"] == 0)
		{
			<input type="submit" value="Delete" class="btn btn-danger" />
		}
		else
		{
			<input type="button" value="Delete" class="btn btn-danger" disabled /> 
			<span class="text-danger">There are still Employees in this team. Choose another team for them before deletion.</span>
		}
	</form>
</div>
