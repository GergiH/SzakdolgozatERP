@model AppUser

@if (Model != null)
{
	<li class="dropdown">
		<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Hello, @Model.DisplayName <span class="caret"></span></a>
		<ul class="dropdown-menu" role="menu">
			<li class="dropdown-header">@User.Identity.Name</li>
			<li><a asp-area="" asp-controller="AppUsers" asp-action="SelfEdit">Settings</a></li>
			<li class="divider"></li>
			<li><a asp-area="" asp-controller="Clients" asp-action="Statistics">Statistics</a></li>
		</ul>
	</li>
}
else
{
	<li class="navbar-text">I don't know you. Get out!</li>
}